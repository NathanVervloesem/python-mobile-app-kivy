<SelectableBox>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 20
    Label:
        text: root.text
        font_size: 23
    Button:
        size_hint: 0.20, 1
        text: "x"
        background_color: (1, 0, 0, 1)
        on_press: root.on_button_click()
        font_size: 32

<RootWidget>:
    inputbutton1: inputbutton1
    inputcontent1: inputcontent1
    inputbutton2: inputbutton2
    inputcontent2: inputcontent2    
    inputbutton3: inputbutton3
    inputcontent3: inputcontent3    
    outputcontent1: outputcontent1
    outputcontent2: outputcontent2
    outputcontent3: outputcontent3

    orientation: 'vertical'

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'


        Label:
            text: 'Shopping List'
            size_hint: 1, 0.1
            font_size: 32

        Tabs:
            do_default_tab: False
            
            TabbedPanelItem:
                text: 'Lidl'
                font_size: 25
                canvas.after:
                    Color:
                        rgba: (0.2, 0.6, 1, 0.2) if self.state == 'down' else (0.7, 0.7, 0.7, 0.2)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        
                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            id: inputbutton1
                            size_hint: 0.25, 1
                            text: 'add'
                            background_color: (0, 1, 0, 1)
                            on_press: root.add_item()
                            font_size: 23

                        TextInput:
                            id: inputcontent1
                            multiline: False
                            font_size: 23
                
                    ListWidget:
                        id: outputcontent1
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            TabbedPanelItem:
                text: 'Aldi'
                font_size: 25
                canvas.after:
                    Color:
                        rgba: (0.2, 0.6, 1, 0.2) if self.state == 'down' else (0.7, 0.7, 0.7, 0.2)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            id: inputbutton2
                            size_hint: 0.25, 1
                            text: 'add'
                            background_color: (0, 1, 0, 1)
                            on_press: root.add_item()
                            font_size: 23

                        TextInput:
                            id: inputcontent2
                            multiline: False
                            font_size: 23

                    ListWidget:
                        id: outputcontent2
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            TabbedPanelItem:
                text: 'Carrefour'
                font_size: 25
                canvas.after:
                    Color:
                        rgba: (0.2, 0.6, 1, 0.2) if self.state == 'down' else (0.7, 0.7, 0.7, 0.2)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            id: inputbutton3
                            size_hint: 0.25, 1
                            text: 'add'
                            background_color: (0, 1, 0, 1)
                            on_press: root.add_item()
                            font_size: 23

                        TextInput:
                            id: inputcontent3
                            multiline: False
                            font_size: 23

                    ListWidget:
                        id: outputcontent3
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            

   
        Button:
            size_hint: 1, 0.1
            text: 'clear tab'
            background_color: (1, 0, 0, 1)
            on_press: root.clear_tab()
            font_size: 25




            




    

        

 

