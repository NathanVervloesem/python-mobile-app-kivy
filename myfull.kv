<SelectableBox>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 20
    Label:
        text: root.text
    Button:
        size_hint: 0.25, 1
        text: "x"
        on_press: root.on_button_click()

<RootWidget>:
    inputbutton1: inputbutton1
    inputcontent1: inputcontent1
    inputbutton2: inputbutton2
    inputcontent2: inputcontent2    
    inputbutton3: inputbutton3
    inputcontent3: inputcontent3    
    outputcontent1: outputcontent1
    outputcontent2: outputcontent2
    outputcontent3: outputcontent3

    orientation: 'vertical'

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'

        

        Label:
            text: 'Shopping List'
            size_hint: 1, 0.1

        Button:
            text: 'load data'
            size_hint: 1, 0.1
            on_press: root.load_items()


        Tabs:
            do_default_tab: False
            size_hint: 1, 1
            
            TabbedPanelItem:
                text: 'Lidl'
                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            id: inputbutton1
                            size_hint: 0.25, 1
                            text: 'add'
                            on_press: root.add_item()

                        TextInput:
                            id: inputcontent1
                            multiline: False
                
                    ListWidget:
                        id: outputcontent1
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            TabbedPanelItem:
                text: 'Aldi'
                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.2
                        Button:
                            id: inputbutton2
                            size_hint: 0.25, 1
                            text: 'add'
                            on_press: root.add_item()

                        TextInput:
                            id: inputcontent2
                            multiline: False

                    ListWidget:
                        id: outputcontent2
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            TabbedPanelItem:
                text: 'Carrefour'

                BoxLayout:
                    orientation:'vertical'
                    BoxLayout:
                        size_hint: 1, 0.2
                        Button:
                            id: inputbutton3
                            size_hint: 0.25, 1
                            text: 'add'
                            on_press: root.add_item()

                        TextInput:
                            id: inputcontent3
                            multiline: False

                    ListWidget:
                        id: outputcontent3
                        viewclass: 'SelectableBox'
                        orientation: 'vertical'

                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            




    

        

 

