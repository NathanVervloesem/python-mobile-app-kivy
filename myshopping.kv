                    app.root.transition.direction = 'right'                
            Button:
                size_hint: 0.5, 1
                text: "Third Page"
                font_size: sp(23)

<FourthScreen>:
    name: "fourth" 
    img: img  
    BoxLayout:
        orientation: 'vertical' 
        Button:
            text: 'Choose Image'
            size_hint_y: None
            height: '48sp'
            font_size: sp(32)
            on_release: root.select_file()
        Image:
            id: img
            source: ''
        Button:
            text: 'Analyze and add'
            size_hint: 1, 0.1 
            font_size: sp(32)
            on_release: root.analyze_photo()                   

        






   




            




    

        

 

