    name: 'third'
    BoxLayout:
        orientation: 'vertical'
        Label: 
            text: 'Third Screen'
            size_hint: 1, 0.1
            font_size: sp(32) 
        Button:
            size_hint: 1, 0.1
            font_size: sp(23)
            text: 'Add expense'
            background_color: (0, 1, 0, 1)
            on_press:
                app.root.current = 'fourth'
        BoxLayout:
            Button:
                size_hint: 0.5, 1
                text: "Shopping List"
                font_size: sp(23)                
                on_press: 
                    app.root.current = "first" 
                    app.root.transition.direction = 'right'   
            Button:
                size_hint: 0.5, 1
                text: "Cart List"
