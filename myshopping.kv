        BoxLayout:
            size_hint: 1, 0.1 
            Button:
                size_hint: 0.5, 1
                text: "Shopping List"
                font_size: sp(23)
            Button:
                size_hint: 0.5, 1
                text: "Cart List"   
                font_size: sp(23)
                on_press: 
                    app.root.current = "second"
                    app.root.transition.direction = 'left'
            Button:
                size_hint: 0.5, 1
                text: "Third Page"
                font_size: sp(23)   
                on_press:
                    app.root.current = "third"
